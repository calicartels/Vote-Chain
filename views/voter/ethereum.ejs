<%- include('includes/_navbar') %>
	<!-- Content Row -->
	<div class="row">
		<% if (typeof ethAcc != 'undefined' ){ %>
			<div class="col-xl-10 offset-1 col-lg-10">
				<div class="card shadow">
					<div class="card-body text-center py-5">
						<i class="fas fa-check-circle text-success fa-4x"></i>
						<h4 class="font-weight-bold mt-5">
							Ethereum account already registered: <%= ethAcc %> 
						</h4>
					</div>
				</div>
		<% } else { %>
			<div class="col-xl-10 offset-1 col-lg-10">
				<div class="card shadow">
					<div class="
												card-header
												py-3
												d-flex
												flex-row
												align-items-center
												justify-content-between
											">
						<h6 class="m-0 font-weight-bold text-primary">
							Add your Ethereum account
						</h6>

					</div>
					<div class="card-body">
						<!-- Error messages if any -->
						<%- include('includes/_messages') %>
							<form method="POST">
								<div class="form-group mb-4">
									<label class="font-weight-bold text-dark">Ethereum account</label>
									<input type="tel" class="form-control form-control-user" name="ethereumAccount"
										placeholder="Enter Ethereum Account" required autocomplete="off"
										value="<%= typeof ethereumAccount != 'undefined' ? ethereumAccount : '' %>">
								</div>
								<br>
								<input type="submit" class="btn btn-info btn-block" value="Add Account">
							</form>
					</div>
				</div>
				<% } %>
			</div>		
	</div>

	<%- include('includes/_footer') %>