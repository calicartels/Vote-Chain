<%- include('includes/_navbar') %>
	<!-- Content Row -->
	<div class="row">
		<% if (typeof phone != 'undefined' ){ %>
			<div class="col-xl-10 offset-1 col-lg-10">
				<div class="card shadow">
					<div class="card-body text-center py-5">
						<i class="fas fa-check-circle text-success fa-4x"></i>
						<h4 class="font-weight-bold mt-5">
							Phone number already registered: <%= phone %> 
						</h4>
					</div>
				</div>
		<% } else { %>	
			<div class="col-xl-10 offset-1 col-lg-10">
				<div class="card shadow">
					<div class="
												card-header
												py-3
												d-flex
												flex-row
												align-items-center
												justify-content-between
											">
						<h6 class="m-0 font-weight-bold text-primary">
							Add your phone number for OTP verification
						</h6>

					</div>
					<div class="card-body">
						<!-- Error messages if any -->
						<%- include('includes/_messages') %>
							<form method="POST">
								<div class="form-group mb-4">
									<label class="font-weight-bold text-dark">Phone Number</label>
									<input type="tel" class="form-control form-control-user" name="phoneNumber"
										placeholder="Enter Phone Number" required autocomplete="off"
										value="<%= typeof phoneNumber != 'undefined' ? phoneNumber : '' %>">
								</div>
								<br>
								<input type="submit" class="btn btn-info btn-block" value="Add Phone number">
							</form>
					</div>
				</div>
				<% } %>
			</div>
	</div>

	<%- include('includes/_footer') %>