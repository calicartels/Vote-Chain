<%- include('includes/_navbar') %>
	<!-- Content Row -->
	<%- include('includes/_messages') %>

	<div class="row">
		<div class="col">
			<div class="card shadow py-2 mb-4">
				<div class="card-body">
					<div class="row mb-3">
						<div class="col-4 text-center">
							<% if (typeof electionStage != 'undefined' && electionStage > 0) { %>
								<div class="d-flex flex-column text-success">						
									<div class="pb-2">
										<i class="fas fa-2x fa-check-circle"></i>
									</div>				 
							<% } else if(typeof electionStage != 'undefined' && electionStage == 0) { %>
								<div class="d-flex flex-column text-warning">			
									<div class="pb-2">
										<i class="fas fa-2x fa-dot-circle"></i>
									</div>							 
							<% }else { %>
								<div class="d-flex flex-column">
									<div class="pb-2">
										<i class="fas fa-2x fa-minus"></i>
									</div>										 
							<% } %>
								<div class="font-weight-bold">
									Voter Registration Phase
								</div>
							</div>
						</div>
						<div class="col-4 text-center">
							<% if (typeof electionStage != 'undefined' && electionStage > 1) { %>
								<div class="d-flex flex-column text-success">						
									<div class="pb-2">
										<i class="fas fa-2x fa-check-circle"></i>
									</div>				 
							<% } else if(typeof electionStage != 'undefined' && electionStage == 1) { %>
								<div class="d-flex flex-column text-warning">			
									<div class="pb-2">
										<i class="fas fa-2x fa-dot-circle"></i>
									</div>							 
							<% }else { %>
								<div class="d-flex flex-column">
									<div class="pb-2">
										<i class="fas fa-2x fa-minus"></i>
									</div>										 
							<% } %>
								<div class="font-weight-bold">
									Voting Phase
								</div>
							</div>
						</div>
						<div class="col-4 text-center">
							<% if (typeof electionStage != 'undefined' && electionStage > 2) { %>
								<div class="d-flex flex-column text-success">						
									<div class="pb-2">
										<i class="fas fa-2x fa-check-circle"></i>
									</div>				 
							<% } else if(typeof electionStage != 'undefined' && electionStage == 2) { %>
								<div class="d-flex flex-column text-warning">			
									<div class="pb-2">
										<i class="fas fa-2x fa-dot-circle"></i>
									</div>							 
							<% }else { %>
								<div class="d-flex flex-column">
									<div class="pb-2">
										<i class="fas fa-2x fa-minus"></i>
									</div>										 
							<% } %>
								<div class="font-weight-bold">
									Result Phase
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
			<div class="row mt-4">
				<div class="col-6 mb-4" style="min-height: 200px;">
					<div class="card <%= typeof phone != 'undefined' ? 'bg-success' : 'bg-danger' %> text-white shadow h-100">
						<div class="card-header py-3">
							<h6 class="font-weight-bold text-dark m-0">
								Phone Number
							</h6>
						</div>
						<div class="card-body text-center d-flex align-items-center justify-content-center">
							<p class="text-lg"><%= typeof phone != 'undefined' ? phone : "Register your phone number" %></p>
						</div>
					</div>
				</div>
				<div class="col-6 mb-4" style="min-height: 200px;">
					<div class="card <%= typeof ethAcc != 'undefined' ? 'bg-success' : 'bg-danger' %> text-white shadow h-100">
						<div class="card-header py-3">
							<h6 class="font-weight-bold text-dark m-0">
								Ethereum Account
							</h6>
						</div>
						<div class="card-body text-center d-flex align-items-center justify-content-center">
							<p><%= typeof ethAcc != 'undefined' ? ethAcc : "Register your ethereum account" %></p>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>

	<%- include('includes/_footer') %>